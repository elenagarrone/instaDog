<% if @posts.any? %>
  <% @posts.each do |post| %>

    <div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag post.image.url(:thumb) %>
          <div class="caption">
            <h3><%= link_to "#{ post.title }", post_path(post) %></h3>
            <span class="likes_count"><%= post.likes.count %></span> Likes
            <p><%= post.description %></p>
            <%= link_to "Like", post_likes_path(post), id: "#{ post.title.split.join('').downcase }", class: "likes-link btn btn-primary" %>
            <% if current_user == post.user %>
              <%= link_to "Edit", edit_post_path(post), class: 'btn btn-primary' %>
              <%= link_to "Delete", post_path(post), method: :delete, class: 'btn btn-primary' %>
            <% end %>
            <%= link_to "Comment", new_post_review_path(post), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  No posts yet
<% end %>
