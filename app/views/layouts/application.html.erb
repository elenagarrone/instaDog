<!DOCTYPE html>
<html>
<head>
  <title>InstaDog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:600' rel='stylesheet' type='text/css'>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          <img alt="Brand" src="images/instaDog.png">
        </a>
        <% if user_signed_in? %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn" %>
          <a class="btn btn-primary navbar-btn" href='/posts/new'>Add a post</a>
        <% else %>
          <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-default navbar-btn" %>
          <%= link_to 'Sign in', new_user_session_path, class: "btn btn-default navbar-btn" %>
          <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-default navbar-btn" %>
        <% end %>
      </div>
    </div>
  </nav>
    <%= notice %>
    <%= yield %>
</body>
</html>
